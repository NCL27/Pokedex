@using Pokedex.Core.Application.ViewModels.Type;
@model List<TypeViewModel>
@{
    ViewData["Title"] = "Type";
}

<div class="container-fluid">

    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="Type" asp-action="Create" class="btn btn-outline-success">Create new type</a>
        </div>
    </div>
    <div class="row">
        @if (Model == null || Model.Count == 0)
        {
            <h2>There aren't types</h2>
        }
        else
        {
            @foreach (TypeViewModel item in Model)
            {
                
     var typeColors = new Dictionary<string, string>
     {
     { "Fuego", "#FF5733" },   // Naranja-Rojo
     { "Agua", "#3498DB" },    // Azul
     { "Planta", "#27AE60" },  // Verde
     { "Eléctrico", "#F1C40F" }, // Amarillo
     { "Hielo", "#5DADE2" },   // Azul Claro
     { "Psíquico", "#FFCBDB" }, // Morado
     { "Normal", "566573" }, //Gris
     { "Lucha", "#e67e22" }, //Naranja
     { "Veneno", "#7d3c98" }, //Morado
     { "Tierra", "#784212" }, //Marron
     { "Volador", "#00FFFF" }, //Cian
     { "Bicho", "#32CD32" }, //Lima
     { "Roca", "#EDE8DO" }, //Beige
     { "Fantasma", "#4a235a" }, //Violata oscuro
     { "Dragón", "#00446A" }, //Azul Marino
     { "Siniestro", "#000000" }, //Negro
     { "Acero", "#999B9B" }, //Plateado
     { "Hada", "FF00FF" }, //Fucsia
     };

     string color = typeColors.ContainsKey(item.Name) ? typeColors[item.Name] : "#000000"; // Gris por defecto
 
                <div class="col-4">
                    <div class="card shadow-sm">

                        <div class="card-body">
                            <h4 style="color:@color;">@item.Name</h4>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Type" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info">Edit</a>
                                    <a asp-controller="type" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
