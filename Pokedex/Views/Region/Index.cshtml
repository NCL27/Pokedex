@using Pokedex.Core.Application.ViewModels.Region;
@model List<RegiViewModel>
@{
    ViewData["Title"] = "Regions";
}

<div class="container-fluid">

    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="Region" asp-action="Create" class="btn btn-outline-success">Crear nueva region</a>
        </div>
    </div>
    <div class="row">
        @if (Model == null || Model.Count == 0)
        {
            <h2>There aren't regions</h2>
        }
        else
        {
            @foreach (RegiViewModel item in Model)
            {
                <div class="col-4">
                    <div class="card shadow-sm">

                        <div class="card-body">
                            <h4>@item.Name</h4>
                            <p class="card-text">@item.Description</p><br />
                            
                            <p>El color de esta region: <b>@item.Color</b></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Region" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info">Edit</a>
                                    <a asp-controller="Region" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                                </div> 
                                <small class="fm-bold fs-6">Amount of pokemons: @item.PokemonsQuantity </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

